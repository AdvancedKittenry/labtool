<%= form_for(@registration) do |f| %>
  <% if @registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% @registration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <% if @user and @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this registration from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <%= label_tag 'first name' %><br />
    <%= text_field_tag 'user[forename]', (@user.forename if @user) %>
  </div>
  <div class="field">
      <%= label_tag 'surename' %><br />
      <%= text_field_tag 'user[surename]', (@user.surename if @user) %>
  </div>

  <div class="field">
    <%= label_tag 'email' %><br />
    <%= text_field_tag 'user[email]', (@user.email if @user) %>
  </div>
  <div class="field">
      <%= label_tag 'student number' %><br />
      <%= text_field_tag 'user[student_number]', (@user.student_number if @user) %>
  </div>

  <div class="field">
    Your work topic eg. Drinkkiarkisto<br/>
    <%= f.text_field :topic %>
  </div>

  <div class="field">
    Github repository in form <em>https://github.com/youraccount/yourrepo</em><br/>
    <%= f.text_field :repository %>
  </div>
  <div class="field" id="langfield">
    Programming language<br />
    <input type="radio" name="lang" id="lang_java" value="Java">
    <label for="lang_java">Java</label>
    <br />
    <input type="radio" name="lang" id="lang_php" value="PHP">
    <label for="lang_php">PHP</label>
    <br />
    <input type="radio" name="lang" id="lang_other" value="other">
    <label for="lang_other">Other</label>
    
    <div id="otherlang">
      What language?
      <%= f.text_field :language%>
    </div>

  </div>

  <div class="field">
    The test URL of your application. Usually of the form <em>http://username.users.cs.helsinki.fi/tsoha/esittelysivu.html</em> or similar<br/>
    <%= f.text_field :test_url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
